
@{
    ViewBag.Title = "MemberIndex";
}


@section Style{}
<div class="site-blocks-cover inner-page-cover overlay " style="background-image: url(../images/hero_1.jpg);"
     data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1 style="margin-top:150px">一般會員首頁</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*畫面*@

<div class="site-section bg-light">
    <div class="container bg-white" style="margin-top: 20px;">
        <div class="row">
            @*左側可切換選單*@
            @*class設定active*@
            <div class="col-2">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" href="#">個人資訊</a>
                    <a class="list-group-item list-group-item-action" href="放連結">喜愛活動</a>
                    <a class="list-group-item list-group-item-action" href="~/MemberMgt/MemberCalendar">行事曆</a>
                    <a class="list-group-item list-group-item-action" href="放連結">購物車</a>
                    <a class="list-group-item list-group-item-action" href="放連結">訂單管理</a>
                    <a class="list-group-item list-group-item-action" href="放連結">文章管理</a>
                </div>
            </div>
            @*左側可切換選單*@

            @*右側顯示內容部分*@
            <div class="col-lg-10">
                <div class="tab-content" id="nav-tabContent">
                    @*畫面放在這*@

                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-memberindex-tab" data-toggle="tab" href="#nav-memberindex" aria-selected="true">個人資訊</a>
                            <a class="nav-item nav-link" id="nav-memberedit-tab" data-toggle="tab" href="#nav-memberedit" aria-selected="false">編輯資料</a>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-memberindex" role="tabpanel" aria-labelledby="nav-home-tab">
                            @*個人資訊*@
                            @Html.Action("_MemberIndexPartial", "MemberMgt")
                            @*個人資訊*@

                        </div>
                        <div class="tab-pane fade" id="nav-memberedit" role="tabpanel" aria-labelledby="nav-profile-tab">
                            @*資料修改*@
                            @Html.Action("_MemberEditPartial", "MemberMgt")
                            @*資料修改*@
                        </div>
                    </div>

                    @*畫面放在這*@
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        //圖片
        $("#imgIpt").change(function () {
            // 上傳檔案的按鈕ID
            readURL(this);   //
        });
        function readURL(input) {//這邊就做預覽圖片

            if (input.files && input.files[0]) {

                var reader = new FileReader();

                reader.onload = function (e) {

                    $("#editimg").attr('src', e.target.result);
                    //需要一個img來放圖片
                }

                reader.readAsDataURL(input.files[0]);

            }

        }
    </script>
}
