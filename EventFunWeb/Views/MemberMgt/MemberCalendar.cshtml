
@{
    ViewBag.Title = "MemberCalendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{}
<div class="site-blocks-cover inner-page-cover overlay " style="background-image: url(../images/hero_1.jpg);"
     data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h1 style="margin-top:150px">一般會員首頁</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*畫面*@

<div class="site-section bg-light">
    <div class="container bg-white" style="margin-top: 20px;">
        <div class="row">
            @*左側可切換選單*@
            @*class設定active*@
            <div class="col-2">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action" href="~/MemberMgt/MemberIndex">個人資訊</a>
                    <a class="list-group-item list-group-item-action" href="放連結">喜愛活動</a>
                    <a class="list-group-item list-group-item-action active" href="#">行事曆</a>
                    <a class="list-group-item list-group-item-action" href="放連結">購物車</a>
                    <a class="list-group-item list-group-item-action" href="放連結">訂單管理</a>
                    <a class="list-group-item list-group-item-action" href="放連結">文章管理</a>
                </div>
                <div style="height:500px; width:100%;">
                    @Html.Action("_FavoriteEventToCalendarPartial", "calendar")
                    @Html.Action("_ShoppingCartEventToCalendarPartial", "calendar")
                    @Html.Action("_OrderEventToCalendarPartial", "calendar")
                </div>
            </div>
            @*左側可切換選單*@

            @*右側顯示內容部分*@
            <div class="col-lg-10">
                <div class="tab-content" id="nav-tabContent">
                    @*畫面放在這*@
                    <!-- 行事曆測試區 -->
                    <div class="site-section" data-aos="fade">
                        <div style="text-align:center"><span  id="datetip">行事曆</span></div>
                        <div class="container">
                            @Html.Action("_CalendarPartial", "Calendar")

                        </div>

                    </div>
                    <!-- 行事曆測試區 -->
                    @*畫面放在這*@
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $('.datetest').mouseenter(function () {
            $(`#${this.name}`).removeAttr('hidden')
        })
        $('.datetest').mouseleave(function () {
            $(`#${this.name}`).attr('hidden','hidden')
        })
    </script>
}

