@model EventFunWeb.t活動


@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <style>
        .p_star {
            display: inline-block;
            position: relative;
            margin-top: 15px;
            border-radius: 5px;
        }

        .a_star {
            border-radius: 5px;
        }

        textarea {
            display: block;
            width: 100%;
            border-radius: 5px;
        }
    </style>
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(../images/hero_1.jpg);"
     data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center">
                    <div class="col-md-8 text-center">
                        <h2 style="margin-top:150px">新增活動</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="site-section bg-light">
        <div class="container ">

            <form action="#" class="row contact_form" style="margin-top: 20px;">

                <h4>新增活動</h4>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12 row" style="border-top:solid 0.5px #eee;">

                    <div class="col-lg-6  p_star">
                        <label class="control-label">主題:</label>


                        @Html.DropDownList("f主題名稱", (SelectList)ViewBag.SelectList, "請選擇主題:", new { id = "Theme", @class = "form-control a_star" })
                    </div>

                    <div class=" col-lg-6 p_star ">
                        @Html.Label("次主題:", htmlAttributes: new { @class = "control-label " })
                        <select id="SubThemes" name="f次主題編號" class="form-control a_star"><option>請先選擇主題</option></select>
                        @Html.ValidationMessageFor(model => model.f次主題編號, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-6 p_star ">
                        @Html.Label("聯絡人名稱:", htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.f活動聯絡人, new { htmlAttributes = new { @class = "form-control a_star" } })
                        @Html.ValidationMessageFor(model => model.f活動聯絡人, "", new { @class = "text-danger" })
                        <span class="placeholder" data-placeholder="次主題"></span>

                    </div>

                    <div class="col-lg-6 p_star">
                        @Html.Label("聯絡人電話:", htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.f聯絡人電話, new { htmlAttributes = new { @class = "form-control a_star" } })
                        @Html.ValidationMessageFor(model => model.f聯絡人電話, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-lg-6 p_star">
                        @Html.Label("聯絡人信箱:", htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.f聯絡人信箱, new { htmlAttributes = new { @class = "form-control a_star" } })
                        @Html.ValidationMessageFor(model => model.f聯絡人信箱, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-lg-6 p_star">
                        @Html.Label("活動名稱:", htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.f活動名稱, new { htmlAttributes = new { @class = "form-control a_star" } })
                        @Html.ValidationMessageFor(model => model.f活動名稱, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-lg-12 p_star">
                        @Html.Label("活動網址:", htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.f活動網址, new { htmlAttributes = new { @class = "form-control a_star" } })
                        @Html.ValidationMessageFor(model => model.f活動網址, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-lg-12 p_star">
                        @Html.Label("活動簡介:", htmlAttributes: new { @class = "control-label" })

                        @Html.TextArea("f活動簡介",
                                           new{id = "f活動簡介", @name = "f活動簡介" })
                        <!-- @Html.EditorFor(model => model.f活動簡介, new { htmlAttributes = new { @class = "form-control a_star" } })-->
                        @Html.ValidationMessageFor(model => model.f活動簡介, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-lg-12 p_star">
                        @Html.Label("活動內容:", htmlAttributes: new { @class = "control-label " })

                        @Html.TextArea("f活動內容",
                                        new{id = "f活動內容", @name = "f活動內容" })
                        <!-- @Html.EditorFor(model => model.f活動內容, new { htmlAttributes = new { @class = "form-control a_star" } })-->
                        @Html.ValidationMessageFor(model => model.f活動內容, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="下一步" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <div class="progress">
        <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated " role="progressbar" style="width: 40%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="50"></div>
    </div>



}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" language="javascript">
        var editor = CKEDITOR.editor.replace(
            'f活動內容', { skin: 'kama', width: '1050px', height: '800px' }
        );
    </script>

    <script type="text/javascript" language="javascript">

    $(document).ready(function () {
        $('#Theme').change(function () { ChangeTheme(); });
    });

        function ChangeTheme() {
           
            var selectedValue = $('#Theme option:selected').val();
            if (selectedValue.length > 0) {
            SubTheme(selectedValue);
        }
    }

        function SubTheme(themeID) {
            
        $.ajax({
            url: '@Url.Action("Themes", "AddEvent")',
            data: { themeID: themeID },
            type: 'post',
            cache: false,
            async: false,
            dataType: 'json',
            success: function (data) {
                if (data.length > 0) {
                    $('#SubThemes').empty();
                    $('#SubThemes').append($('<option></option>').val('').text('請選擇次主題'));
                    $.each(data, function (i, item) {
                        $('#SubThemes').append($('<option></option>').val(item.Key).text(item.Value));
                    });
                }
            }
        });
    }


    </script>
}

