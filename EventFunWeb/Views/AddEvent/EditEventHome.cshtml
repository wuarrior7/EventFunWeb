<div style="width: 60%;  margin: 28px auto 60px; padding:50px 0px 50px 0px">

    <div class="Eventhomebody">
        <h3 class="title-style">繼續編輯 @Model.f活動名稱 活動</h3>
        <div class="card">
            <div class="card-body">
                <a href=""></a>
                <p class="card-text">
                    <h4 class="title-style">步驟一：活動資訊</h4>
                    @*@Html.ActionLink("活動基本資料", "EditEvent", new { id = @Model.f活動編號 }, new { @class = "btn btn-lg  btn-arrow-right btn-style" })*@
                    <button type="button" class="btn btn-lg  btn-arrow-right btn-style" id="@Model.f活動編號" onclick="clickHref()"><i class="fas fa-check"></i>活動基本資料</button>
                    <button type="button" class="btn btn-lg  btn-arrow-right btn-style" id="@Model.f活動編號"><i class="fas fa-check"></i>活動封面圖片</button>
                    <button type="button" class="btn btn-lg  btn-arrow-right btn-style" id="@Model.f活動編號"><i class="fas fa-check"></i>活動舉辦時間</button>
                </p>
            </div>
        </div>
        <br>
        <div class="card">
            <div class="card-body">
                <h4 class="title-style">步驟二：場次票卷</h4>
                <p class="card-text">

                    <button type="button" class="btn btn-lg btn-arrow-right btn-style" id="@Model.f活動編號"><i class="fas fa-check"></i>活動場次設定</button>
                    <button type="button" class="btn btn-lg  btn-arrow-right btn-style-null " id="@Model.f活動編號">活動票卷設定</button>
                </p>
            </div>
        </div>
        <br>
        <div class="card">
            <div class="card-body">
                <h4 class="title-style"><i class="fas fa-check"></i>完成：預覽活動</h4>
                <p class="card-text">
                    <button type="button" class="btn btn-lg  btn-arrow-right btn-style-null" id="@Model.f活動編號">活動預覽</button>
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function clickHref() {
            var a = window.location.href.toString();

            var b = a.split("/");
            b[4] = "EditEvent";

            var newl = b[0] + "/" + b[1] + "/" + b[2] + "/" + b[3] + "/" + b[4] + "/" + b[5];

            window.location = newl;

        }
    </script>
    }
